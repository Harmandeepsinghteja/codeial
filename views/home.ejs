
<h1>
        Codeial / <%= title %> 
</h1>



<section id="feed-posts">
        <h4>Posts</h4>
        <% if (locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" id="" cols="30" rows="3" required placeholder="Type Here.."></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>
        <div>
                <% for (post of posts) { %>
                <li>
                        <%- include('_post') -%>
                </li>
                <% } %>
        </div>
</section>




